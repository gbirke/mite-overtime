{
  "name": "mite-overtime",
  "version": "0.0.1",
  "description": "Overtime tracker for mite.yo.lk",
  "directories": {
    "lib": "js",
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gbirke/mite-overtime"
  },
  "private": true,
  "main": "server.js",
  "browser": {
    "server.js": "./js/main.js"
  },
  "scripts": {
    "start": "node server.js",
    "watch": "watchify -o web/js/app.js -v -d .",
    "test": "mocha --recursive",
    "build": "browserify -o web/js/app.js -t envify js/main.js",
    "lint": "jshint js test",
    "cs": "jscs js test",
    "fulltest": "npm run lint && npm run cs && mocha"
  },
  "author": "Gabriel Birke <gb@birke-software.de>",
  "license": "MIT",
  "devDependencies": {
    "benv": "^3.0.0",
    "browserify": "^9.0.8",
    "chai": "^3.3.0",
    "envify": "^3.4.0",
    "jscs": "^2.3.1",
    "jshint": "^2.8.0",
    "mocha": "^2.3.3",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0",
    "watchify": "^3.1.2"
  },
  "dependencies": {
    "bootstrap": "^3.3.5",
    "d3": "^3.5.6",
    "express": "^4.12.3",
    "jquery": "^2.1.4",
    "lodash": "^4.11.1",
    "moment": "^2.10.6",
    "moment-duration-format": "^1.3.0",
    "morgan": "^1.5.2",
    "object-assign": "^4.0.1",
    "reflux-core": "^0.3.0"
  }
}
